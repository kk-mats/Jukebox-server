{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es2019"],
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "dist",
		"baseUrl": "."
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}